{
  "permissions": {
    "allow": [
      "Bash(find:*)",
      "Bash(gh issue view:*)",
      "Bash(gh issue create:*)",
      "Bash(gh issue edit:*)",
      "Bash(gh issue list:*)",
      "Bash(gh issue comment:*)",
      "Bash(gh pr view:*)",
      "Bash(gh pr create:*)",
      "Bash(gh pr list:*)",
      "Bash(gh pr edit:*)",
      "Bash(gh pr comment:*)",
      "Bash(gh pr checks:*)",
      "Bash(gh pr status:*)",
      "Bash(gh label:*)",
      "Bash(gh repo view:*)",
      "Bash(grep:*)",
      "Bash(wc:*)",
      "Bash(chmod:*)",
      "Bash(git status:*)",
      "Bash(git log:*)",
      "Bash(git diff:*)",
      "Bash(git branch:*)",
      "Bash(git show:*)",
      "Bash(git fetch:*)",
      "Bash(git stash:*)",
      "Bash(git stash pop:*)",
      "Bash(git stash list:*)",
      "Bash(git commit:*)",
      "Bash(git add:*)",
      "Bash(git push:*)",
      "Bash(git pull:*)",
      "Bash(git checkout:*)",
      "Bash(git switch:*)"
    ],
    "deny": [
      "Bash(git merge:*)"
    ],
    "ask": [
      "Bash(git reset:*)",
      "Bash(git push --force:*)",
      "Bash(git push -f:*)",
      "Bash(git clean:*)",
      "Bash(git stash drop:*)",
      "Bash(git stash clear:*)",
      "Bash(git rebase:*)",
      "Bash(git branch -D:*)",
      "Bash(git branch -d:*)",
      "Bash(git checkout -- :*)"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash(gh pr create*)",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/protect-main-on-pr.sh",
            "timeout": 30
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Bash(gh issue create*)",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/capture-issue-create.sh",
            "timeout": 30
          }
        ]
      }
    ]
  }
}
